function echo_with_next_prompt() {
  builtin echo "$@"
  sleep 1000
  render -t -r 02_help.md
}

alias echo="echo_with_next_prompt"

function help_with_next_prompt() {
  builtin help
  sleep 1000
  render -t -r 03_design.md
}

alias help="help_with_next_prompt"

function cat_with_next_prompt() {
